# ──────────────────────────────────────────────
# Metadata Generator API — Environment Variables
# ──────────────────────────────────────────────
# Copy this file to `.env` and fill in the values.

# Application
APP_NAME="Metadata Generator API"
ENVIRONMENT=development
LOG_LEVEL=INFO
API_V1_PREFIX=/api/v1
DEBUG=false

# CORS — comma-separated origins are NOT supported by pydantic-settings;
# use a JSON array string instead.
ALLOWED_ORIGINS='["http://localhost:3000"]'

# Azure Content Understanding
AZURE_CONTENT_UNDERSTANDING_ENDPOINT=https://<your-resource>.cognitiveservices.azure.com
AZURE_CONTENT_UNDERSTANDING_KEY=<your-key>
